conky.config = {
  background = true,
  out_to_console = false,
  update_interval = 2,
  total_run_times = 0,
  own_window = true,
  own_window_type = 'normal',
  own_window_transparent = true,
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
  double_buffer = true,
  draw_shades = false,
  draw_outline = false,
  draw_borders = false,
  draw_graph_borders = true,
  stippled_borders = 5,
  border_width = 1,
  default_shade_color = 'black',
  default_outline_color = 'black',
  no_buffers = false,
  uppercase = false,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  override_utf8_locale = true,
  use_spacer = 'right',

  -- Window settings
  alignment = 'bottom_middle',
  minimum_width = 300,
  minimum_height = 200,
  gap_x = 0,
  gap_y = 50,

  -- Text settings
  use_xft = true,
  font = 'Ubuntu Mono:size=10',
  default_color = 'EBDBB3',

  -- Gruvbox Color Scheme
  color0 = '3C3836', -- Foreground
  color1 = 'D79921', -- Yellow
  color2 = 'D65D0E', -- Orange
  color3 = 'CC241D', -- Red
  color4 = '98971A', -- Green
  color5 = '689D6A', -- Aqua
  color6 = '458588', -- Blue
  color7 = 'B16268', -- Purple
  color8 = '7C6F64', -- Gray
  color9 = 'EBDBB3' -- Background

}

conky.text = [[
${if_running spotify}
Artist: ${execi 3 ~/.conky/spotify/artist-info.sh}
Title: ${execi 3 ~/.conky/spotify/title-info.sh}
Album: ${execi 3 ~/.conky/spotify/album-info.sh}

${execi 3 ~/.conky/spotify/album-cover.sh}
${image ~/.conky/spotify/album-cover.png -p 30,80 -s 100x100}
]];
