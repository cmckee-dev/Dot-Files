conky.config = {
  background = true,
  out_to_console = false,
  update_interval = 2,
  total_run_times = 0,
  own_window = true,
  own_window_type = 'normal',
  own_window_transparent = true,
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
  double_buffer = true,
  draw_shades = false,
  draw_outline = false,
  draw_borders = false,
  draw_graph_borders = true,
  stippled_borders = 5,
  border_width = 1,
  default_shade_color = 'black',
  default_outline_color = 'black',
  no_buffers = false,
  uppercase = false,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  override_utf8_locale = true,
  use_spacer = 'right',

  -- Window settings
  alignment = 'middle_right',
  minimum_width = 325,
  maximum_width = 325,
  gap_x = 80,
  gap_y = 50,

  -- Lua Config
  lua_load = '~/.conky/conky_draw.lua',
  lua_draw_hook_pre = 'main',

  -- Text settings
  use_xft = true,
  font = 'Ubuntu Mono:size=10',
  default_color = 'EBDBB3',

  -- Gruvbox Color Scheme
  color0 = 'EBDBB3', -- Foreground
  color1 = 'D79921', -- Yellow
  color2 = 'D65D0E', -- Orange
  color3 = 'CC241D', -- Red
  color4 = '98971A', -- Green
  color5 = '689D6A', -- Aqua
  color6 = '458588', -- Blue
  color7 = 'FB4934', -- Bright Red
  color8 = '7C6F64', -- Gray
  color9 = '3C3836', -- Background

  -- Templates
  template0 = [[${color4}${font Ubuntu Mono:Bold:size=14}\1 ${color0}${hr 2}${voffset 10}${color}${font}]],
  template1 = [[${offset 10}${color3}${font Ubuntu Mono:Bold:size=10}\1 ${color}${font}]],
  template2 = [[${offset 10}${color1}${font Ubuntu Mono:Bold:size=10}\1 ${color}${font}]],
}

conky.text = [[
${template0 System}${font}${color1}
${template2 User:} ${alignr}${execi 9600 whoami}
${template2 Hostname:} ${alignr}${nodename}
${template2 Dist:} ${alignr}${execi 9600 lsb_release --description | cut -f2}
${template2 Codename:} ${alignr}${execi 9600 lsb_release --codename | cut -f2}
${template2 Kernel:} ${alignr}${kernel}
${template2 Arch:} ${alignr}${machine}

${template0 CPU}
${template2 CPU1:}  ${cpu cpu1}%
${template2 CPU2:}  ${cpu cpu2}%

${template2 Total:} ${cpu cpu0}%

${template0 Memory}
${template2 Used:} ${mem} ${alignr}${template2 Total:} ${memmax}

${template2 RAM:}   ${memperc}%
${template2 SWAP:}  ${swapperc}%

${template0 File-System}
${offset 10}/dev/sdb3   ${fs_used_perc /}%   ${fs_used /}/${fs_size /}

${template0 Network}
${template2 Public:} ${alignr}${execi 9600 ~/.conky/sys/ip.sh}
${template2 Local:} ${alignr}${addr wlp4s0}

${offset 10}Download: ${downspeed wlp4s0} ${alignr}Upload: ${upspeed wlp4s0}
${downspeedgraph wlp4s0 40,140 98971A 689D6A -l}${alignr}${upspeedgraph wlp4s0 40,140 98971A 689D6A -l}

${template0 Processes}
${template2 Running:} ${color0}${processes}

${offset 10}${color0}${font Ubuntu Mono:Bold:size=10}Name  ${offset 90}PID ${offset 20}CPU% ${offset 15}USER
${offset 10}${color7}${top name 1}  ${top pid 1} ${top cpu 1}  ${top user 1}${color}${font}
${offset 10}${top name 2}  ${top pid 2} ${top cpu 2}  ${top user 2}
${offset 10}${top name 3}  ${top pid 3} ${top cpu 3}  ${top user 3}
${offset 10}${top name 4}  ${top pid 4} ${top cpu 4}  ${top user 4}
${offset 10}${top name 5}  ${top pid 5} ${top cpu 5}  ${top user 5}

${color8}${hr}

${offset 10}${color0}${font Ubuntu Mono:Bold:size=10}Name  ${offset 90}PID ${offset 20}MEM% ${offset 15}USER
${offset 10}${color7}${top_mem name 1}  ${top_mem pid 1} ${top_mem mem 1}  ${top_mem user 1}${color}${font}
${offset 10}${top_mem name 2}  ${top_mem pid 2} ${top_mem mem 2}  ${top_mem user 2}
${offset 10}${top_mem name 3}  ${top_mem pid 3} ${top_mem mem 3}  ${top_mem user 3}
${offset 10}${top_mem name 4}  ${top_mem pid 4} ${top_mem mem 4}  ${top_mem user 4}
${offset 10}${top_mem name 5}  ${top_mem pid 5} ${top_mem mem 5}  ${top_mem user 5}

]];
